{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "",
          "files": [
            //"**/*.csproj"
            "**/bin/Release/net10.0/*.dll"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Enderlook.Pools",
      "_appTitle": "Enderlook.Pools",
      "_enableSearch": true,
      "pdf": true,
      "_gitContribute": {
        "repo": "https://github.com/Enderlook/Net-Pools"
      },
      "_gitUrlPattern": "https://github.com/Enderlook/Net-Pools"
    },
    "markdownEngineProperties": {
      "markdigExtensions": [
        "footnotes"
      ]
    }
  }
}